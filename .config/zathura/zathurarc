set selection-clipboard clipboard
set first-page-column 1:1

set font			"FiraCode Nerd Font Mono 14"
set recolor                     true

set completion-group-bg         "#002b36"
set completion-group-fg         "#839496"
set completion-bg               "#6e6a86"
set completion-fg               "#ebbcba"
set completion-highlight-fg     "#26233a"
set completion-highlight-bg     "#ebbcba"

set notification-bg             "#e0def4"
set notification-fg             "#555169"
set notification-error-bg       "#f6c177"
set notification-error-fg       "#555169"
set notification-warning-bg     "#ebbcba"
set notification-warning-fg     "#555169"

set index-bg                    "#26354b"
set index-fg                    "#E5E5E5"
set index-active-bg             "#586e75"
set index-active-fg             "#eee8d5"

set inputbar-bg                 "#6e6a86"
set inputbar-fg                 "#ebbcba"
set statusbar-fg                "#e0def4"
set statusbar-bg                "#555169"
set highlight-color             "#ebbcba"
set highlight-active-color      "#eb6f92"
set default-bg                  "#191724"
set default-fg                  "#e0def4"
set recolor-lightcolor          "#191724"
set recolor-darkcolor           "#e0def4"
set statusbar-v-padding  	15
set statusbar-h-padding  	75
set pages-per-row 		1
set statusbar-basename          true
set page-padding 		1
set adjust_window		width

map r reload
map R rotate
map K zoom in
map J zoom out

# Annotate in zathura settings
map <C-n> feedkeys "o<BackSpace><BackSpace><BackSpace><BackSpace><BackSpace>exec znotes.sh $FILE <Return>"
map <C-e> feedkeys "o<BackSpace><BackSpace><BackSpace><BackSpace><BackSpace>exec znotes.sh -e $FILE <Return>"
map <C-v> feedkeys "o<BackSpace><BackSpace><BackSpace><BackSpace><BackSpace>exec znotes.sh -v $FILE <Return>"
